<h1>All bookings</h1>

<h1>Hello, <%= @current_client.name %>!</h1>
<h2> You have got <%= pluralize(@current_client.bookings.count, 'booking')  %> available.</h2>

<% @current_client.bookings.each do |booking| %>
<p>
<%= booking.title %>
</p>

<div class=“controls”>
  <%= link_to "Edit booking", edit_booking_path(booking) %>
  <%= link_to "Delete booking", booking, :method => 'delete', :data => { :confirm => "Are you sure?"} %>
</div>
<% end %>
