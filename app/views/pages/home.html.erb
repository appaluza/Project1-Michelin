  <li class="list-group-item">
    <h4> <%= restaurant.name %> </h4>
    <p> rating: <%= restaurant.rating %> stars </p>
    <%= link_to 'See more', restaurant_path(restaurant) %>
  </li>
  <% end %>
</ul>
<% end %>
